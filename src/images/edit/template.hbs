<div class="page-header">
  <h1>Images: Edit</h1>
</div>

<form class="colors__form form-horizontal well" role="form">
  {{#if errors}}
    <div class="alert alert-warning">
      <ul>
        {{#each errors}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  {{/if}}

  <div class="form-group">
    <label class="col-sm-1 control-label" for="name">Name</label>
    <div class="col-sm-11">
      <input class="form-control" name="name" type="text" placeholder="selfie">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-1 control-label" for="link">Link</label>
    <div class="col-sm-11">
      <input class="form-control" name="link" type="text" placeholder="http://...">
    </div>
  </div>

  <div class="form-group">
     <div class="col-sm-offset-1 col-sm-11">
       <button type="submit" class="btn btn-default">Submit</button>
     </div>
   </div>
</form>
